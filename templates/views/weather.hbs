<!DOCTYPE html>
<html lang="en">

<head>
  {{>headerlinks}}
</head>

<body>


  {{>navbar}}

  <img id="img1" src="images/clear.jpg" alt="">

  <!-- main-header -->
  <div class="container-fluid" >
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
        <div class="main-content">
          <form  class="temp-form" onsubmit="getInfo()">
            <input type="text" id="cityInput" autocomplete="off" placeholder="Enter your city" >
            <input type="submit" value="search" id="submitBtn">
          </form>
        </div>
        <div class="temp-info">
          <div class="top-layer">
            <p id="day">Tuesday</p>
            <p id="today-data">26 April</p>
          </div>
          <div class="main-layer">
            <p id="city-name">Which city, let us see</p>
            <div class="middle-layer data-hide">
                <p id="temp"> <span class="temp-real-val">0</span><sup>0</sup>C </p>
                <p id="temp-status">  </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

 
 {{>footer}}
  <script src="js/main.js"></script>
  
</body>

</html>
